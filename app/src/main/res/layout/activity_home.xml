<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/main"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo"
        android:layout_marginBottom="24dp" />

    <!-- Welcome Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Nguyễn Trúc Quỳnh"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center" />

    <RadioGroup
        android:id="@+id/choiceGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Option 1: Buy -->
        <RadioButton
            android:id="@+id/radioBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I want to buy"
            android:buttonTint="#3F51B5"
            android:textColor="#3F51B5" />

        <!-- Option 2: Sell -->
        <RadioButton
            android:id="@+id/radioSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I want to sell"
            android:buttonTint="#FF5722"
            android:textColor="#FF5722"
            android:layout_marginStart="16dp" />
    </RadioGroup>

    <!-- Remember Choice -->
    <CheckBox
        android:id="@+id/rememberCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember my choice"
        android:layout_marginTop="16dp" />

    <!-- OK Button -->
    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white" />
</LinearLayout>
